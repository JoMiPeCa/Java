Proceso Guia_Ejercicios
	
	definir num como entero;
	
	num = 0;
	
	Escribir "Ingrese un numero";
	Leer num;
	
	Si (num>0) entonces
		Escribir "El numero ",num," es positivo";
	FinSi

	Si (num<0) entonces
		Escribir "El numero ",num," es negativo";
	FinSi
	
	Si (num=0) entonces
		Escribir "El numero ",num," no es ni positivo ni negativo";
	FinSi
	
	
FinProceso
